<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mdoming15.campusalma.Details_etablissement"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/detail_image_etablissement" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/detail_image_like"
        android:layout_alignTop="@+id/detail_nom_etablessement"
        android:layout_toLeftOf="@+id/ratingBar"
        android:layout_toStartOf="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp"
        android:id="@+id/detail_nom_etablessement"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        android:layout_below="@+id/detail_image_etablissement"
        android:layout_alignRight="@+id/detail_image_etablissement"
        android:layout_alignEnd="@+id/detail_image_etablissement"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/detail_image_like"
        android:layout_toRightOf="@+id/detail_image_like"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/detail_image_like"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_adresse_etablessement"
        android:layout_below="@+id/ratingBar"
        android:layout_toLeftOf="@+id/detail_image_googleMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/detail_image_googleMap"
        android:layout_alignBottom="@+id/detail_adresse_etablessement"
        android:layout_alignRight="@+id/detail_nom_etablessement"
        android:layout_alignEnd="@+id/detail_nom_etablessement" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_menu_etablissement"
        android:layout_below="@+id/detail_adresse_etablessement"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_commentaire_etablissement"
        android:layout_below="@+id/detail_menu_etablissement"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
